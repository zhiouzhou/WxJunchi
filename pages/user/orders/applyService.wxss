/* pages/user/orders/applyService.wxss */

.userInfo {
  margin: 20rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 18rpx;
  display: flex;
  /* justify-content: space-between */
}

.head-pic {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50px;
  margin-right: 24rpx;
}

.user-name {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.license-pic {
  width: 180rpx;
  height: 140rpx;
  margin-left: 16rpx;
}

.orderInfo {
  margin: 20rpx;
  background: #fff;
  border-radius: 18rpx;
}

.orderInfo>view {
  padding: 24rpx;
  border-bottom: 2rpx solid #eaeaea;
}

.driverInfo {
  display: flex;
  align-items: center;
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.select-address, .addReceiveAddress {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  position: relative;
}

.jiantou-icon {
  width: 13rpx;
  height: 22rpx;
}

.select-icon {
  width: 13rpx;
  height: 24rpx;
}

.address {
  display: flex;
  align-items: center;
}

.section {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.letter {
  height: 4rpx;
  margin: 0 20rpx;
}

.letter {
  height: 4rpx;
  width: 94%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.letter-image {
  width: 100%;
  height: 100%;
}

.line-image {
  width: 100%;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.ensure {
  position: fixed;
  bottom: 24rpx;
  left: 24rpx;
  width: 94%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 16rpx;
  background: #e00000;
}
.empty-view{
  height: 98rpx;

}

.hover_class {
  background: #aa2b2b;
}

picker {
  width: 100%;
}

.mobile {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 24rpx;
}

.sortSelect {
  padding: 8rpx 24rpx;
  border: 2rpx solid #eaeaea;
  border-radius: 25px;
}
