/* pages/user/orders/myOrder.wxss */

.classification {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.orderType {
  flex: 1;
  text-align: center;
  position: relative;
  color: #848484;
  font-size: 26rpx;
}

.orderType_one {
  flex: 1;
  text-align: center;
  color: #222;
  position: relative;
  font-size: 30rpx;
}

.line {
  width: 85rpx;
  height: 4rpx;
  background-color: #e53935;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 32rpx;
}

.order-list-info {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
}

.order-time {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #eaeaea;
  padding: 20rpx 0;
  margin: 0 24rpx;
}

.product-info {
  background: #fff;
  border-radius: 16rpx;
}

.product-info-content {
  display: flex;
  align-items: cetner;
  padding: 24rpx;
  border-bottom: 2rpx solid #eaeaea;
}

.product-name-price {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  /* background: red; */
  margin-right: 20rpx;
}

.product-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.count > text {
  font-size: 36rpx;
  width: 38rpx;
  height: 38rpx;
  display: block;
  text-align: center;
  line-height: 38rpx;
  border-radius: 8rpx;
  border: 2rpx solid #eaeaea;
  color: #848484;
}

.count {
  display: flex;
  align-items: center;
}

.order-button1 {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  justify-content: space-between;
}

.order-button {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  justify-content:flex-end;

}

.total-price{
  padding: 20rpx 24rpx;
  border-bottom: 2rpx solid #eaeaea;
}

.gray-border {
  min-width: 176rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border: 2rpx solid #d3d3d3;
  color: #222;
  border-radius: 50px;
  font-size: 26rpx;
  margin-left: 20rpx;
  background: #fff;
}

.red-border {
  min-width: 176rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border: 2rpx solid #aa2b2b;
  color: #aa2b2b;
  font-size: 26rpx;
  border-radius: 50px;
  margin-left: 24rpx;
}

.empty{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 200rpx;
}

.empty-icon{
  width: 248rpx;
  height: 248rpx;
  margin-bottom: 60rpx;
}
.empty-tip{
  color: #656c78;

}

.select-btn{
  color: #656c78;
  background: #fff;
  border: 2rpx solid #a9b2bd;
  width: 176rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  margin-top: 12rpx;
}