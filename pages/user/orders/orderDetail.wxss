/* pages/user/orders/orderDetail.wxss */
@import "../../../components/product/product.wxss";
page{
  border: none;
}
.order-state {
  background: #f43e32;
  height: 112rpx;
  display: flex;
  align-items: center;
  padding: 0 50rpx;
}

.state-logo {
  width: 52rpx;
  height: 46rpx;
  margin-right: 28rpx;
}

.address {
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
}

.address>text {
  padding: 30rpx;
}

.line-image {
  width: 100%;
  height: 6rpx;
}

.product-info {
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}
.product-info-content-detail {
  padding: 24rpx;
  border-bottom: 2rpx solid #eaeaea;
}

.product-name-price {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  /* background: red; */
  margin-right: 20rpx;
}

.product-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit-btn {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 24rpx;
}

.after-sale {
  width: 176rpx;
  height: 56rpx;
  border: 2rpx solid #eaeaea;
  line-height: 56rpx;
  text-align: center;
  border-radius: 44rpx;
}

.tatal {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 23rpx 30rpx;
}

.place-order-info {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
}

.place-an-order,.store {
  border-bottom: 2rpx solid #eaeaea;
  padding: 28rpx;
}

.info {
  display: flex;
  align-items: center;
  padding-bottom: 19rpx;
}

.invoice {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

.check {
  display: flex;
  align-items: center;
}

.more-icon {
  width: 16rpx;
  height: 22rpx;
  padding-left: 10rpx;
}

.handle-btn {
  width: 216rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  border-radius: 44rpx;
  border: 2rpx solid #eaeaea;
  margin-left: 10rpx;
}

.handle-order {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 40rpx;
  background: #fff;
  height: 98rpx;
  padding: 0 20rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  box-sizing: border-box
}
.gray-border {
  width: 216rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  border: 2rpx solid #d3d3d3;
  color: #222;
  border-radius: 50px;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.red-border {
  width: 216rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  border: 2rpx solid #aa2b2b;
  color: #aa2b2b;
  font-size: 26rpx;
  border-radius: 50px;
  margin-left: 24rpx;
}


