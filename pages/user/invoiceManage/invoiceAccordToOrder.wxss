/* pages/user/invoiceManage/invoiceAccordToOrder.wxss */
page {
  border-top: none;
}

.rule-titile {
  padding: 20rpx 24rpx;
  background: linear-gradient(90deg, rgb(204, 14, 23), rgb(232, 77, 85));
}

.order-list-info {
  background: #fff;
}

.shop-cart-list {
  /* margin:0 20rpx; */
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eaeaea;
  padding: 20rpx;
}

.select-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 13rpx;
}

.product-info {
  background: #fff;
  border-radius: 16rpx;
  flex: 1;
}

.product-info-content {
  display: flex;
  align-items: cetner;
}

.product-name-price {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-image {
  width: 166rpx;
  height: 166rpx;
  margin-right: 20rpx;
}

.product-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.count > text {
  font-size: 36rpx;
  width: 38rpx;
  height: 38rpx;
  display: block;
  text-align: center;
  line-height: 38rpx;
  border-radius: 8rpx;
  border: 2rpx solid #eaeaea;
  color: #848484;
}

.count {
  display: flex;
  align-items: center;
}

.delete {
  border-top: 2rpx solid #eaeaea;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 22rpx;
}

.delete-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 12rpx;
}

.next-step {
  background: #fff;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 24rpx;
  height: 98rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-sizing: border-box;
}

.next-step-btn {
  width: 248rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  background: linear-gradient(90deg, rgb(204, 14, 23), rgb(232, 77, 85));
  border-radius: 44rpx;
}

.empty{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 200rpx;
}

.empty-icon{
  width: 248rpx;
  height: 248rpx;
  margin-bottom: 60rpx;
}
.empty-tip{
  color: #656c78;

}

.select-btn{
  color: #656c78;
  background: #fff;
  border: 2rpx solid #a9b2bd;
  width: 176rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  margin-top: 12rpx;
}
