/* pages/user/receiveAddress/receiveAddress.wxss */
.button-grey {
  height: 56rpx;
  min-width: 144rpx;
  font-size: 28rpx;
  color: #1e1e1e;
  margin-left: 24rpx;
  text-align: center;
  line-height: 54rpx;
  border: 2rpx solid #d3d3d3;
  border-radius: 50rpx;
}

.bottom-buttom {
  left: 0;
  bottom: 48rpx;
  right: 0;
  height: 88rpx;
  position: fixed;
  background-color: #e00000;
  color: #fff;
  text-align: center;
  z-index: 40;
  display: flex;
  align-items: center;
  justify-content: center;
}

.address-content{
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
}

.address-info {
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #f2f2f2;
  padding: 24rpx;
}

.user-state {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.set-default-buttom {
  display: flex;
  flex-direction: row;
  border-bottom: 12rpx solid #f2f2f2;
  padding: 24rpx;
  align-items: center;
  justify-content: space-between;
}

.hover_class{
  background: #aa2b2b
}
.each-contain {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.empty{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  margin-top: 200rpx;
}

.empty-icon{
  width: 248rpx;
  height: 248rpx;
  margin-bottom: 60rpx;
}
.empty-tip{
  color: #656c78;

}

.select-btn{
  color: #656c78;
  background: #fff;
  border: 2rpx solid #a9b2bd;
  width: 176rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  margin-top: 12rpx;
}
