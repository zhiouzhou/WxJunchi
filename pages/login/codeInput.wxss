/* pages/login/codeInput.wxss */
page{
  background: #fff;
}
.code-title{
  margin: 100rpx 58rpx;
}

.code-input-wrap {
  position: relative;
  margin:0 56rpx;
}

.code-frame-wrap {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
}

.code-frame {
  box-sizing: border-box;
  text-align: center;
  border: 2rpx solid #e5e5e5;
}


.code-input {
  background-color: transparent;
  color: transparent;
  font-size: 1rpx;
  width: 100%;
  height: 100%;
}

.countDown{
  margin: 48rpx 56rpx
}

.login{
  margin: 50rpx 30rpx;
  background: #e00000;
  border-radius: 16rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  
}
.hover_class{
  background: #aa2b2b
}
