/* pages/login/login.wxss */

page {
  background: #fff;
  /* margin: 0 56rpx; */
}

.login-input, .login-btn-gray, .login-btn-red {
  margin: 0 56rpx;
}

.logo {
  height: 40rpx;
  width: 142rpx;
}

.welcome-title {
  margin: 100rpx 56rpx 160rpx;
  display: flex;
  flex-direction: column;
}

.title {
  margin-top: 36rpx;
}

.login-input {
  margin-top: 19rpx;
  border-bottom: 2rpx solid #eaeaea;
  padding-bottom: 36rpx;
}

.check-button {
  margin: 48rpx 56rpx;
  display: flex;
  align-items: center;
}

.login-type {
  border-right: 2rpx solid #d3d3d3;
  padding-right: 15rpx;
}

.login-btn-gray {
  height: 96rpx;
  background: #dcdfe6;
  border-radius: 44rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 96rpx;
  box-sizing: border-box;
}

.login-btn-red {
  height: 96rpx;
  background: #e00000;
  border-radius: 44rpx;
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 96rpx;
  box-sizing: border-box;
}

